<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit <%= hotel.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <div class="buttons">
                <a href="/hotels/<%= hotel._id%>/" class="btn btn-success">Back to <%= hotel.name %></a>
                <a href="/" class="btn btn-success">Back to Home</a>
                <br />
            </div>
             <br /> <br />
            <form action="/hotels/<%= hotel._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %>"></input>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="hotel[price]" min="0.05" step="0.05" value="<%= hotel.price %>"></input>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="hotel[image]" value="<%= hotel.image %>"></input>
                </div>
                <button class="btn btn-primary btn-block" type="submit">Update!</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>