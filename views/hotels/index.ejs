<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <% if (!currentUser) { %>
                <h2><span class="glyphicon glyphicon-tent" aria-hidden="true"></span>
                Welcome to Book A Hotel</h2>
            <% } else { %>
                <h2><span class="glyphicon glyphicon-tent" aria-hidden="true"></span>
                Welcome to Book A Hotel, <%= currentUser.username %>!</h2>
            <% } %>
            <p>View our hand-picked Hotels!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/hotels/new/">Create a new Hotel</a>
                <a class="btn btn-primary btn-lg" href="/">Back to Home</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
                <h3>Our most popular Hotels</h3>
        </div>
    </div>
            <!-- How to fix the grid of the images with different height 
            use the style attribute on the class "row"
            -->
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% hotels.forEach(function(hotel){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= hotel.image %>" class="img-responsive" />
                        <div class="caption">
                            <h4> <a href="/hotels/<%= hotel._id %>"> <%= hotel.name %> </a> </h4>
                            <!-- <% if (hotel.description) { %>-->
                            <!--<p> <%= hotel.description %> </p>-->
                            <!--<% } %>-->
                            <% if (hotel.price) { %>
                            <h4> Price: $<%= hotel.price %> </h4>
                            <% } %>
                            <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
</div>



<% include ../partials/footer %>
